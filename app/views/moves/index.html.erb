<div class="container">
  <h1 class="text-center">List of Pokemon Moves</h1>

  <div class="row">
    <% @moves.each do |move| %>
      <div class="col-4 col-lg-2">
        <p><%= link_to move.name, move_path(move) %></p>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @moves %>
</div>